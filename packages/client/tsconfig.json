{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "noEmit": true,
    "incremental": true,
    "jsx": "preserve"
  },
  "exclude": [
    ".next",
    "out",
    "next.config.js"
  ],
  "include": [
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "pages/**/*.ts",
    "pages/**/*.tsx",
    "dist/**/*.d.ts"
  ]
}
