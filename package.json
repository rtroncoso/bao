{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bs": "npm run bootstrap",
    "bootstrap": "lerna bootstrap",
    "prebuild": "git clean -fdx packages -e packages/*/node_modules",
    "lint": "lerna run lint --parallel --stream",
    "test": "cross-env NODE_ENV=testing lerna run test --stream",
    "build:dev": "lerna run build:dev",
    "build": "lerna run build",
    "start:dev": "lerna run start:dev --parallel --stream",
    "start": "lerna run start --parallel --stream"
  },
  "devDependencies": {
    "cross-env": "^5.2.0",
    "lerna": "^3.13.1",
    "typescript": "^3.4.4"
  }
}
